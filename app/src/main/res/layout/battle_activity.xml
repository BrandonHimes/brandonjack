<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:paddingBottom="50dp"
    android:paddingTop="15dp"
    tools:context=".PuzzleActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:src="@drawable/gooblin_elite" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wheel1Prev"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel1Curr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel1Next"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wheel2Prev"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel2Curr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel2Next"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wheel3Prev"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel3Curr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel3Next"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wheel4Prev"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel4Curr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel4Next"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wheel5Prev"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel5Curr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                    <ImageView
                        android:id="@+id/wheel5Next"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:keepScreenOn="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/melee" />

                </LinearLayout>

            </LinearLayout>

            <view
                class="com.jackbrando.memotome.component.WheelSelectionView"
                android:id="@+id/SelectionCanvas"
                android:layout_width="360dp"
                android:layout_height="240dp"/>

        </FrameLayout>

        <Button
            android:id="@+id/spinButton"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:onClick="spin"
            android:text="@string/spinText" />

    </LinearLayout>
    <!-- save me!
    android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                -->
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
