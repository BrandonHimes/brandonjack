<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".PuzzleActivity"
    android:paddingTop="15dp"
    android:paddingBottom="50dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/enemy"
            android:src="@drawable/gooblin_elite"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView android:id="@+id/wheel1Prev"
                    style="@style/WheelOption"
                    android:onClick="selectPrevOnWheel1" />

                <ImageView android:id="@+id/wheel1Curr"
                    style="@style/WheelOption"
                    android:onClick="selectCurrOnWheel1" />

                <ImageView android:id="@+id/wheel1Next"
                    style="@style/WheelOption"
                    android:onClick="selectNextOnWheel1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/wheel2Prev"
                    style="@style/WheelOption"
                    android:onClick="selectPrevOnWheel2" />

                <ImageView
                    android:id="@+id/wheel2Curr"
                    style="@style/WheelOption"
                    android:onClick="selectCurrOnWheel2" />

                <ImageView
                    android:id="@+id/wheel2Next"
                    style="@style/WheelOption"
                    android:onClick="selectNextOnWheel2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/wheel3Prev"
                    style="@style/WheelOption"
                    android:onClick="selectPrevOnWheel3" />

                <view
                    class="com.jackbrando.memotome.component.WheelOptionView"
                    android:id="@+id/wheel3Curr"
                    style="@style/WheelOption"
                    android:onClick="selectCurrOnWheel3" />

                <ImageView
                    android:id="@+id/wheel3Next"
                    style="@style/WheelOption"
                    android:onClick="selectNextOnWheel3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/wheel4Prev"
                    style="@style/WheelOption"
                    android:onClick="selectPrevOnWheel4" />

                <ImageView
                    android:id="@+id/wheel4Curr"
                    style="@style/WheelOption"
                    android:onClick="selectCurrOnWheel4" />

                <ImageView
                    android:id="@+id/wheel4Next"
                    style="@style/WheelOption"
                    android:onClick="selectNextOnWheel4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/wheel5Prev"
                    style="@style/WheelOption"
                    android:onClick="selectPrevOnWheel5" />

                <ImageView
                    android:id="@+id/wheel5Curr"
                    style="@style/WheelOption"
                    android:onClick="selectCurrOnWheel5" />

                <ImageView
                    android:id="@+id/wheel5Next"
                    style="@style/WheelOption"
                    android:onClick="selectNextOnWheel5" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spinText"
            android:id="@+id/spinButton"
            android:layout_gravity="center_horizontal|top"
            android:onClick="spin"
            style="@android:style/Widget.Button" />

    </LinearLayout>
<!-- save me!
android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            -->
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
